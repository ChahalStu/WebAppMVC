<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinical Document Repository System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Clinical Document Repository System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle show" data-bs-toggle="dropdown" asp-area="" asp-controller="Patients" asp-action="Index" role="button" aria-haspopup="true" aria-expanded="true">Patients</a>
                            <div class="dropdown-menu" data-bs-popper="static">
                                <a class="dropdown-item" asp-area="" asp-controller="Patients" asp-action="Create">New Patient</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Patients" asp-action="Edit">Edit an Existing Patients</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Patients" asp-action="Index">View Patients</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ClinicalRecords" asp-action="Index">Clinical Record</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle show" data-bs-toggle="dropdown" asp-area="" asp-controller="Clinics" asp-action="Index" role="button" aria-haspopup="true" aria-expanded="true">Clinic</a>
                            <div class="dropdown-menu" data-bs-popper="static">
                                <a class="dropdown-item" asp-area="" asp-controller="Clinics" asp-action="Create">New Clinic</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Clinics" asp-action="Edit">Edit an Existing Clinic</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Clinics" asp-action="Index">View Clinics</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
