@using WebApplication1.ViewModels
@model ManageUserRolesViewModel

@{
    ViewData["Title"] = "Manage User Roles";
}

<h1>Manage Roles for @ViewBag.UserName</h1>

<form asp-action="Manage" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" value="@ViewBag.userId" />

    <table class="table">
        <thead>
            <tr>
                <th>Role</th>
                <th>Assigned</th>
                <th>Unassigned</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>
                        <input type="hidden" asp-for="@role.Id" />
                        <label asp-for="@role.Name" value="@role.Name" class="control-label">@role.Name</label>
                    </td>
                    <td>
                        <input type="radio" name="roles_@role.Id" value="assign" class="form-check-input" @(role.Selected ? "checked" : "") />
                    </td>
                    <td>
                        <input type="radio" name="roles_@role.Id" value="unassign" class="form-check-input" @(!role.Selected ? "checked" : "") />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button asp-controller="UserRoles" asp-action="Save" asp-route-userId="@ViewBag.userId" type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
