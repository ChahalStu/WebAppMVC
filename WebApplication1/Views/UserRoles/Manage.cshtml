@using WebApplication1.ViewModels
@model ManageUserRolesViewModel

@{
    ViewData["Title"] = "Manage User Roles";
}

<h1>Manage Roles for @ViewBag.UserName</h1>

<form asp-action="Manage" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" value="@ViewBag.userId" />
    @foreach(var role in Model.Roles)
    {
        <div class="form-group">
            <input type="hidden" asp-for="@role.RoleId" />
            <label asp-for="@role.RoleName" class="control-label"></label>
            <input asp-for="@role.Selected" class="form-control" />
        </div>
    }
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
