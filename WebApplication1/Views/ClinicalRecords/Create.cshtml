            <div class="form-group">
                <label asp-for="Referral" class="control-label"></label>
                <input asp-for="Referral" class="form-control" />
                <span asp-validation-for="Referral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="History" class="control-label"></label>
                <input asp-for="History" class="form-control" />
                <span asp-validation-for="History" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic.ClinicName" class="control-label"></label>
                <select asp-for="ClinicID" class="form-control" asp-items="ViewBag.ClinicName"></select>
            </div>
            <div class="form-group">
                <label asp-for="Patient.PatientName" class="control-label"></label>
                <select asp-for="PatientID" class="form-control" asp-items="ViewBag.PatientName"></select>
            </div>
            <div class="form-group">
                <label asp-for="DoctorID" class="control-label"></label>
                <select id="DoctorID" class="form-control" asp-for="DoctorID" asp-items="ViewBag.DoctorName">
                    <option value="">Select a Doctor</option> <!-- Empty option for auto-search -->
                </select>
            </div>

            <br />
            <div class="row">
                <div class="col-md-12">
                    <input asp-for="FilePath" type="file" class="form-control" name="Upload" value="Upload" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" id="btn-upload-patient" class="btn btn-primary" />
            </div>

 


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
<script>
    $(document).ready(function () {
        $('#DoctorID').on('keyup', function () {
            var searchTerm = $(this).val();
            $.ajax({
                url: '/ClinicalRecords/AutoSearch',
                type: 'GET',
                data: { searchTerm: searchTerm },
                success: function (data) {
                    $('#DoctorID').empty(); // Clear existing options
                    $.each(data, function (index, item) {
                        $('#DoctorID').append($('<option>').text(item.text).attr('value', item.value));
                    });
                }
            });
        });
    });

</script>