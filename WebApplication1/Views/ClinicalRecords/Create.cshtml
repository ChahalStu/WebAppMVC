@model WebApplication1.Models.ClinicalRecord

@{
    ViewData["Title"] = "Create";
}

    <h1>Create</h1>

    <h4>ClinicalRecord</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="FileName" class="control-label"></label>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="FileName" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <span asp-validation-for="FileName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Disorder" class="control-label"></label>
                    <input asp-for="Disorder" class="form-control" />
                    <span asp-validation-for="Disorder" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClinicalContactCommenced" class="control-label"></label>
                    <input asp-for="ClinicalContactCommenced" class="form-control" />
                    <span asp-validation-for="ClinicalContactCommenced" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClinicalContactTerminated" class="control-label"></label>
                    <input asp-for="ClinicalContactTerminated" class="form-control" />
                    <span asp-validation-for="ClinicalContactTerminated" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RelevantInformation" class="control-label"></label>
                    <input asp-for="RelevantInformation" class="form-control" />
                    <span asp-validation-for="RelevantInformation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedBy" class="control-label"></label>
                    <input asp-for="CreatedBy" value="@ViewBag.LoggedInUser" class="form-control" />
                    <span asp-validation-for="CreatedBy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UpdatedBy" class="control-label"></label>
                    <input asp-for="UpdatedBy" value="@ViewBag.LoggedInUser" class="form-control" />
                    <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TutorEmailAddress" class="control-label"></label>
                    <input asp-for="TutorEmailAddress" class="form-control" />
                    <span asp-validation-for="TutorEmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Clinician" class="control-label"></label>
                    <input asp-for="Clinician" class="form-control" />
                    <span asp-validation-for="Clinician" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AssessmentFindings" class="control-label"></label>
                    <input asp-for="AssessmentFindings" class="form-control" />
                    <span asp-validation-for="AssessmentFindings" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Referral" class="control-label"></label>
                    <input asp-for="Referral" class="form-control" />
                    <span asp-validation-for="Referral" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="History" class="control-label"></label>
                    <input asp-for="History" class="form-control" />
                    <span asp-validation-for="History" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClinicName" class="control-label"></label>
                <select id="ClinicName" class="form-control select2" asp-for="ClinicName" asp-items="ViewBag.ClinicName">
                        <option value="">Select a Clinic</option> <!-- Empty option for auto-search -->
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="PatientName" class="control-label"></label>
                <select id="PatientName" class="form-control select2" asp-for="PatientName" asp-items="ViewBag.PatientName">
                        <option value="">Select a Patient</option> <!-- Empty option for auto-search -->
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="DoctorName" class="control-label"></label>
                    <select id="DoctorName" class="form-control select2" asp-for="DoctorName" asp-items="ViewBag.DoctorName">
                        <option value="">Select a Doctor</option> <!-- Empty option for auto-search -->
                    </select>
                </div>           

                <br />
                <div class="row">
                    <div class="col-md-12">
                        <input asp-for="FilePath" type="file" class="form-control" name="Upload" value="Upload" />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" id="btn-upload-patient" class="btn btn-primary" />
                </div>




            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}


<!-- Initialize Select2 -->

<script>
    $(document).ready(function ($) {
        $('.select2').select2();
    });
</script>